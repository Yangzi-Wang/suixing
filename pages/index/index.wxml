  <view class='titleBar' style='height:{{titlebar_height}}px;background-color:white'>
    <image src='../../images/like.png' 
      style='margin-top: {{item_icon_position}}px;margin-left: 15px;height: 18px;width: 79px;'></image>
  </view>

  <!--定位以及筛选-->
  <view class="header" style='margin-top: {{header_position}}px;'>
    <view class='header_icon'>
      <image src='../../images/like.png' style='width:17px;height:23px;margin-left:27px;' mode="widthFix"></image>
      <text style='position:absolute;margin-top:22px;margin-left:-22px;'>{{city}}</text>
    </view>
    
    <view class='search'>
      <input type="text" class="weui-search-bar__input" placeholder="搜索" bindconfirm="search" style='height:100%;width:100%;background-color:#EEEEEE;border-radius: 5px'/>
    </view>
      
    
    <view class='header_icon' bindtap='showChooseModal'>
      <image src='../../images/like.png' style='width:21px;height:21px;margin-right:27px;'></image>
      <text style='position:absolute;margin-top:22px;margin-left:-50px;'>筛选</text>
    </view>
  </view>
  
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar" style='margin-top:{{navbar_position}}px;border-bottom: solid 1px #EFEFEF'>
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" data-current="{{index}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            
            <swiper class='swiper_style' bindchange='onSwiperchange' current="{{activeIndex}}" >
              <swiper-item>
                <scroll-view style='height:100%;' scroll-y bindscroll="onPageScroll"  class="weui-tab__content">
                  <view style='height:{{content_position}}px;background-color:white;'></view>
                  <!--附近组队-->
                  
                  <team class='content_box' wx:for="{{teams}}" wx:key="index" team="{{item}}">
                    <!-- <team item="{{item}}"></team> -->
                  </team>

                  <view style='height:20px;background-color:white;'></view>
                </scroll-view>
              </swiper-item>
              
              <swiper-item>
                <scroll-view style='height:100%' scroll-y bindscroll="onPageScroll" class="weui-tab__content">
                  <view style='height:{{content_position}}px;background-color:white;'></view>
                  <!--热门话题-->
                  <topic class='content_box' wx:for="{{hotTopics}}" wx:key="{{item._id}}" topic="{{item}}"></topic>

                  <view style='height:20px;background-color:white;'></view>
                </scroll-view>
              </swiper-item>
            </swiper>

        </view>
    </view>
