.tag{
  border: solid 1px #AB4CFA;
  border-radius: 11px;
  background-color: white;
  color: #AB4CFA;
  padding: 0px 8px 0px 8px;
  font-size: 14px;
  margin-right: 14px;
  margin-bottom: 10rpx;
}
.tag_add{
  padding: 0px 17px 0px 17px;
}

.tag_clean{
  border: solid 1px red;
  color: red;
}
.confirm{
  font-size: 14px;
  color: white;
  background-color: #7CB8F8;
  padding: 2px 24px 2px 24px;
  border-radius: 5px;
}
.distance-slider{
  position: fixed;
  z-index: 1;
  width: 100%;
  height: 60px;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.labels{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.warn{
  width: 100%;
  padding-top: 40%;
  text-align: center;
  font-size: 14px;
  color: #a8a7a7;
}