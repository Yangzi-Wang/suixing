.animation_box{
  width:237px;
  height: 100%;
  background-color:#F4F4F4;
  position: absolute;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
}
.modal_style{
  width:100%;
  height: 100%;
  background-color: #F4F4F4;
  opacity: 0.4;
  position: absolute;
  bottom: 0;
  left:0;
  z-index: 888;
}
.choose_box{
  width: 88%;
  display: flex;
  flex-direction: column;
}
.text_title{
  font-size: 14px;
  padding: 4px 0 0 0;
  font-weight:bold;
}
.content_item{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  margin-top: 6px;
}
.picker_style{
  padding-left: 10rpx;
  width:200rpx;
  height: 40rpx;
  background-color: #ffffff;
  border-radius: 4px;
}

