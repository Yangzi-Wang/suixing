page,
.page,
.page__bd{
  height: 100%;
}
.page__bd{
  padding-bottom: 0;
}
.weui-tab__content{
  background-color: white
}
.weui-navbar__slider{
  bottom:6px;
  width:0.2em;
  background-color:#AB4CFA;
}
.weui-navbar{
  position: fixed;
  background-color: white;
}

.weui-navbar__item.weui-bar__item_on{
  color:#AB4CFA
}
.titleBar{
  width: 100%;
  background-color: white;
  position: fixed;
  z-index: 9999;
}
.header{
  height: 60px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  font-size: 14px;
  position: fixed;
  padding-top: 24px;
  background-color: white;
  z-index: 1;
}
.search{
  margin-top: 8px;
  width: 60%;
  height: 10px;
}
.swiper_style{
  height: 100%;
}
.content_box{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-bottom: 10px;
  border-bottom: solid 1px #EFEFEF;
}

.tips{
  width: 100%;
  height: 300px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.animation_box{
  width:237px;
  height: 100%;
  background-color:#F4F4F4;
  position: absolute;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
}
.modal_style{
  width:100%;
  height: 100%;
  background-color: #F4F4F4;
  opacity: 0.4;
  position: absolute;
  bottom: 0;
  left:0;
  z-index: 888;
}
.choose_box{
  width: 88%;
  display: flex;
  flex-direction: column;
}
.text_title{
  font-size: 14px;
  padding: 4px 0 0 0;
  font-weight:bold;
}
.content_item{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  margin-top: 6px;
}
.picker_style{
  padding: 3px 0px 0px 10px;
  width:100%;
  height: 22px;
  background-color: #ffffff;
  margin-left: 10px;
  border-radius: 4px;
  border: solid 1px rgb(231, 231, 231);
}
.dateAndTime{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-radius: 4px;
}

.tag{
  border: solid 1px #AB4CFA;
  border-radius: 11px;
  background-color: white;
  color: #AB4CFA;
  padding: 0px 8px 0px 8px;
  font-size: 14px;
  margin-right: 14px;
}
.tag_add{
  border: solid 1px #AB4CFA;
  border-radius: 11px;
  background-color: white;
  color: #AB4CFA;
  padding: 0px 17px 0px 17px;
  font-size: 14px;
  margin-right: 14px;
}
.confirm{
  font-size: 14px;
  color: white;
  background-color: #7CB8F8;
  padding: 2px 24px 2px 24px;
  border-radius: 5px;
}