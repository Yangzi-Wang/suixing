.content_post{
  display: flex;
  flex-direction: column;
  font-size: 13px;
  margin-bottom: 14px;
}

.tag{
  border: solid 1px #AB4CFA;
  border-radius: 11px;
  background-color: white;
  color: #AB4CFA;
  padding: 0px 8px 0px 8px;
  font-size: 14px;
  margin-right: 14px;
}
.tag_add{
  border: solid 1px #AB4CFA;
  border-radius: 11px;
  background-color: white;
  color: #AB4CFA;
  padding: 0px 17px 0px 17px;
  font-size: 14px;
  margin-right: 14px;
}
.new{
  font-size: 14px;
  color: white;
  background-color: #7CB8F8;
  padding: 2px 24px 2px 24px;
  border-radius: 5px;
}
.location{
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.picker_style{
  padding: 3px 0px 0px 14px;
  width:100%;
  height: 22px;
  background-color: #EEEEEE;
  margin-left: 10px;
  border-radius: 4px;
}
.dateAndTime{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.get_post{
  width:108px;
  height:24px;
  background-color:rgba(0, 0, 0,0.4);
  color: white;
  border-radius: 4px;
  padding-top: 3px;
  padding-left: 16px;
}
.content-textview{
  color: #C8C8C8;
}
.content_preImg{
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  height: 800px;
  background-color: gray
}
.addImg{
  text-align: center;
  font-size: 60px;
  height:94px;
  width:94px;
  background-color:#EEEEEE;
  color: white;
}