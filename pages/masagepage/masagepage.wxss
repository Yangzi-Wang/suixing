/* pages/masagepage/masagepage.wxss */
page,
.page,
.titleBar{
  width: 100%;
  background-color: white;
  position: fixed;
  z-index: 1;

}
.avatar_box{
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
   border-bottom: 1px;
  border-bottom-width: 100%;  
  border-bottom-color: rgb(224, 221, 221); 
  border-bottom-style: solid;
  padding-bottom: 8px;
}
.page__bd{
  height: 100%;
}
.page__bd{
  padding-bottom: 0;
}
.weui-tab__content{
  background-color: white
}
.weui-navbar__slider{
  bottom:6px;
  width:0.2em;
  background-color:#AB4CFA;
}
.weui-navbar{
  position: fixed;
  background-color: white;
}

.weui-navbar__item.weui-bar__item_on{
  color:#AB4CFA
}

.header{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  /* justify-content:space-between; */
  font-size: 14px;
  position: fixed;
  /* padding-top: 24px; */
  background-color: white;
  z-index: 1;
}
.swiper_style{
  height: 100%;
  width: 100%;
}
.content_box{
  display: flex;
  flex-direction: row;
  padding: 15rpx 30rpx;
  border-bottom: 1px solid #EFEFEF;
}
.content_mid{
  display: flex;
  flex-direction: column;
  flex: 1;
  padding-left:15px;
}
.newtopic{
  display: flex;
  flex-direction: column;
  justify-content:center;
padding-right: 10px;
}
.cycava{
  width: 30px;
  height:30px;
  border-radius: 50%;
}

.btn{
  width: 88px;
  height: 25px;
  background-color: #000000;
  color:#ffffff;
  font-size: 15px;
  vertical-align: middle;
  text-align: center;
  line-height: 25px;
  border-radius: 0px; 
  position: relative;
  bottom: 0px;
}