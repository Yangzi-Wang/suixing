/* pages/settings/settings.wxss */
page,.page{
    height: 100%;
    box-sizing: border-box;
  }

.settings {
    background-color: white;
    margin-top: -1px;
    margin-bottom: 20rpx;
}

.settings-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
    line-height: 90rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border-top: 1px solid #eee;
}

input{
    text-align: right;
}

.btnImg {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.confirm{
    background: #7CB8F8;
    color: #fff;
    width: 30%;
    font-size: 14px;
    margin-top: 20rpx;
}
.cropper-body{
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .stage{
    flex-grow: 1;
  }
  
  
  .bar{
    height: 80rpx;
    padding: 36rpx;
    display: flex;
    flex-direction: row;
    background-color: black;
  }
  
  .btn{
    position: relative;
    flex-grow: 1;
      border: 2rpx solid grey;
    line-height: 80rpx;
    text-align: center;
      color: white;
     font-size: 32rpx;
     border-radius: 40rpx;
  }